<% layout('layouts/main') -%>

<div class="max-w-2xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Edit Micropost</h2>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Update your micropost details.</p>
    </div>

    <!-- Form -->
    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6">
        <% if (typeof error !== 'undefined') { %>
            <div class="mb-6 bg-red-50 dark:bg-red-900/50 border border-red-200 dark:border-red-800 rounded-lg p-4">
                <div class="flex">
                    <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-red-800 dark:text-red-200">
                            <%= error %>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>

        <form action="/microposts/<%= micropost.id %>" method="POST">
            <div class="mb-6">
                <label for="title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Title
                </label>
                <input 
                    type="text" 
                    id="title" 
                    name="title" 
                    value="<%= micropost.title %>"
                    required
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-violet-500 focus:border-violet-500 dark:bg-gray-700 dark:text-white"
                    placeholder="Enter your micropost title..."
                >
            </div>

            <div class="mb-6">
                <div class="text-sm text-gray-500 dark:text-gray-400">
                    <p>Post ID: <%= micropost.id %></p>
                    <p>Created: <%= new Date(micropost.createdAt).toLocaleDateString() %></p>
                    <% if (micropost.updatedAt) { %>
                        <p>Last updated: <%= new Date(micropost.updatedAt).toLocaleDateString() %></p>
                    <% } %>
                </div>
            </div>

            <div class="flex justify-between">
                <a href="/microposts/<%= micropost.id %>" class="px-4 py-2 text-gray-600 dark:text-gray-400 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-2 bg-violet-500 hover:bg-violet-600 text-white rounded-lg font-medium transition-colors">
                    Update Post
                </button>
            </div>
        </form>
    </div>
</div>