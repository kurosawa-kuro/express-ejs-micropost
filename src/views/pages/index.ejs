<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">All Microposts</h2>
        <div class="text-sm text-gray-500 dark:text-gray-400">
            <%= microposts.length %> posts
        </div>
    </div>

    <!-- Posts Grid -->
    <% if (microposts.length === 0) { %>
        <div class="text-center py-12">
            <div class="text-gray-400 dark:text-gray-500 mb-4">
                <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No posts yet</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-6">Get started by creating your first micropost.</p>
            <a href="/microposts/new" class="bg-violet-500 hover:bg-violet-600 text-white px-6 py-3 rounded-lg font-medium transition-colors">
                Create First Post
            </a>
        </div>
    <% } else { %>
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <% microposts.forEach(micropost => { %>
                <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-start justify-between">
                        <div class="flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                                <a href="/microposts/<%= micropost.id %>" class="hover:text-violet-500 transition-colors">
                                    <%= micropost.title %>
                                </a>
                            </h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                ID: <%= micropost.id %>
                            </p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                Created: <%= new Date(micropost.createdAt).toLocaleDateString() %>
                            </p>
                        </div>
                        <div class="flex space-x-2 ml-4">
                            <a href="/microposts/<%= micropost.id %>" class="text-gray-400 hover:text-violet-500 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>